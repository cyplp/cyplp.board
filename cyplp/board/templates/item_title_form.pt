<div class="overlay">
  <form method="POST" action="${request.route_path('itemTitle', idBoard=item['board'], idItem=item['_id'])}">
    <input type="text" name="title" value="${item['title']}" autofocus="on"/>
    <select name="type">
      <option></option>
      <option tal:repeat="type typeItems"
	      tal:attributes="selected item.getType() == type"
	      class="type_${type}"
	      value="${type}">${typeItems[type]['name']}</option>
    </select>

    <select name="tags" id="tags" tal:condition="tags" multiple="true">
      <option tal:repeat="tag tags"
	      tal:attributes="selected tag in item.getTags()"
	      class="tag_${tag}"
	      value="${tag}">${tags[tag]['name']}</option>
    </select>
    <input type="submit" value="save" />
  </form>
</div>
