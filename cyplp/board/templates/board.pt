<!DOCTYPE html>
<html >
  <head>
    <title>WiP</title>
    <link href="${request.static_url('cyplp.board:static/theme.css')}" rel="stylesheet">
  </head>

  <body>
    <article>
      <div class="header">
	<h1>${board['name']}</h1>
      </div>
      <div class="main">
	<div tal:repeat="column columns" class="column">
	  <h2>${column['title']}</h2>
	  <div tal:repeat="item column['items']" class="item">
	    <h3 class="item-title">${item['title']}</h3>
	    <p>${item['content']}</p>
	  </div>
	</div>
      </div>
      <div class="footer">
	<h4>something here</h4>
      </div>
    </article>
  </body>
</html>
